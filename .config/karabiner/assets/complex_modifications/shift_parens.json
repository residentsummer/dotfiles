{
  "title": "Change shift keys",
  "rules": [
    {
      "description": "Change shift keys to parens if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "left_shift" },
          "to": [ { "key_code": "left_shift" } ],
          "to_if_alone": [
            {
              "key_code": "9",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "right_shift" },
          "to": [ { "key_code": "right_shift" } ],
          "to_if_alone": [
            {
              "key_code": "0",
              "modifiers": [
                "right_shift"
              ]
            }
          ]
        }
      ]
    }
  ]
}
